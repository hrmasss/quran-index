---
import LanguageSection from "@/components/LanguageSection.astro";
---

<div class="py-10 lg:py-14">
    <!-- Grid -->
    <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-8 lg:gap-12">
        <!-- Language Column -->
        <div class="lg:col-span-2">
            <a
                class="group relative flex flex-col w-full min-h-60 bg-[url('https://images.unsplash.com/photo-1451187580459-43490279c0fa?q=80')] bg-center bg-cover rounded-xl hover:shadow-lg focus:outline-none focus:shadow-lg transition border shadow-sm"
                href="/">
                <div
                    class="flex-auto p-4 md:p-6 bottom-0 absolute group-hover:text-foreground/90">
                    <h3 class="text-xl font-bold">Languages</h3>
                    <p class="text-sm font-medium">
                        With over 50 major languages
                    </p>
                </div>
            </a>

            <LanguageSection />
        </div>
        <!-- Language Column -->

        <!-- Reciter Column -->
        <div>
            <a
                class="group relative flex flex-col w-full min-h-60 bg-[url('https://images.unsplash.com/photo-1712932115370-4f9d354ced6b?q=80')] bg-center bg-cover rounded-xl hover:shadow-lg focus:outline-none focus:shadow-lg transition border shadow-sm"
                href="/">
                <div
                    class="flex-auto p-4 md:p-6 bottom-0 absolute group-hover:text-foreground/90">
                    <h3 class="text-xl font-bold">Reciters</h3>
                    <p class="text-sm font-medium">
                        Listen from world famous reciters
                    </p>
                </div>
            </a>
        </div>
        <!-- Reciter Column -->
    </div>
    <!-- End Grid -->
</div>
