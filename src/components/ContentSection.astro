---
import LanguageSection from "@/components/LanguageSection.astro";
import ReciterSection from "@/components/ReciterSection.astro";
---

<div class="py-10 lg:py-14">
    <!-- Grid -->
    <div class="grid lg:grid-cols-2 gap-8 lg:gap-12 xl:gap-16">
        <!-- Language Column -->
        <div>
            <div
                class="group relative flex flex-col w-full min-h-60 rounded-xl hover:shadow-lg focus:outline-none focus:shadow-lg transition border shadow-sm overflow-hidden">
                <img
                    class="absolute start-0 top-0 size-full object-cover opacity-80"
                    src="images/languages.avif"
                    alt="Languages Image"
                />
                <div class="flex-auto p-4 md:p-6 bottom-0 absolute">
                    <h3 class="text-xl font-bold">Languages</h3>
                    <p class="text-sm font-medium">
                        With over 50 major languages
                    </p>
                </div>
            </div>

            <LanguageSection />
        </div>
        <!-- Language Column -->

        <!-- Reciter Column -->
        <div>
            <div
                class="group relative flex flex-col w-full min-h-60 rounded-xl hover:shadow-lg focus:outline-none focus:shadow-lg transition border shadow-sm overflow-hidden">
                <img
                    class="absolute start-0 top-0 size-full object-cover opacity-80"
                    src="images/reciters.avif"
                    alt="Reciters Image"
                />
                <div class="flex-auto p-4 md:p-6 bottom-0 absolute">
                    <h3 class="text-xl font-bold">Reciters</h3>
                    <p class="text-sm font-medium">
                        Listen from world famous reciters
                    </p>
                </div>
            </div>

            <ReciterSection />
        </div>
        <!-- Reciter Column -->
    </div>
    <!-- End Grid -->
</div>
