<div
    class="p-4 relative z-10 bg-gradient-to-br from-card to-card/20 border rounded-xl md:p-8 w-full">
    <h3 class="text-lg sm:text-xl font-bold pb-4">Send us your feedback</h3>

    <form class="space-y-3 sm:space-y-6">
        <div>
            <label
                for="feedback-name"
                class="block mb-2 text-sm font-medium"
                >Name</label
            >
            <input
                type="text"
                name="feedback-name"
                id="feedback-name"
                class="py-2 px-3 block w-full rounded-lg text-sm focus:border-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none bg-background border-2 focus:outline-none"
                placeholder="Your full name"
            />
        </div>

        <div>
            <label
                for="feedback-email"
                class="block mb-2 text-sm font-medium"
                >Email</label
            >
            <input
                type="email"
                id="feedback-email"
                name="feedback-email"
                class="py-2 px-3 block w-full rounded-lg text-sm focus:border-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none bg-background border-2 focus:outline-none"
                placeholder="email@example.com"
            />
        </div>

        <div>
            <label
                for="feedback-message"
                class="block mb-2 text-sm font-medium"
                >Message
            </label>
            <div class="mt-1">
                <textarea
                    id="feedback-message"
                    name="feedback-message"
                    rows="2"
                    class="py-2 px-3 block w-full rounded-lg text-sm focus:border-primary focus:ring-primary disabled:opacity-50 disabled:pointer-events-none bg-background border-2 focus:outline-none"
                    placeholder="Leave your feedback here..."
                ></textarea>
            </div>
        </div>

        <button
            type="submit"
            class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-bold transition rounded-lg border border-transparent bg-primary hover:bg-primary/80 focus:outline-none focus:bg-primary/80 disabled:opacity-50 disabled:pointer-events-none text-background"
            >Submit</button
        >
    </form>
</div>
