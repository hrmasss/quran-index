---
import "@/styles/global.css";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta
            name="description"
            content="Astro description"
        />
        <meta
            name="viewport"
            content="width=device-width"
        />
        <link
            rel="icon"
            type="image/svg+xml"
            href="/favicon.svg"
        />
        <meta
            name="generator"
            content={Astro.generator}
        />
        <title>{title}</title>
    </head>
    <body>
        <div class="max-w-7xl px-4 md:px-8 mx-auto">
            <Header />
            <slot />
            <Footer />
        </div>

        <!-- Preline modules -->
        <script>
            import "@preline/collapse/index.js";
        </script>
    </body>
</html>
